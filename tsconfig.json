{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "types": ["reflect-metadata", "node", "jest"],
        "sourceMap": true,
        "outDir": "./lib",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    },
    "compileOnSave": true,
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*spec.ts", "**/*-setup-files.ts"]
}
